<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.DitealsPlantPage">
<data>
    <variable
        name="viewModel"
        type="com.example.plant_life.model.PlantViewModel" />
    <variable
        name="ditealsFragment"
        type="com.example.plant_life.fragments.DitealsPlantPage" />
</data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cover_pic"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="-50dp"
                android:src="@drawable/add_to_my_plant_icon"
                app:imageUrl="@{viewModel.plantImageBackground}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="480dp"
                android:layout_marginTop="180dp"

                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/plant_img"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_margin="8dp"
                            app:imageUrl="@{viewModel.plantImage}"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="30dp"
                            android:text="@{viewModel.plantName}"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@id/plant_img"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/wataring"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.Watering}"
                            app:layout_constraintStart_toStartOf="@+id/name"
                            app:layout_constraintTop_toBottomOf="@id/name" />

                        <TextView
                            android:id="@+id/lighting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@{viewModel.Lighting}"
                            app:layout_constraintStart_toStartOf="@+id/name"
                            app:layout_constraintTop_toBottomOf="@+id/name" />

                        <ImageView
                            android:id="@+id/star_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:layout_constraintStart_toStartOf="@id/lighting"
                            app:layout_constraintTop_toBottomOf="@+id/lighting"/>



                        <TextView
                            android:id="@+id/tempreture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.temperature}"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@id/star_img"
                            app:layout_constraintStart_toEndOf="@id/star_img"
                            app:layout_constraintTop_toTopOf="@id/star_img" />

<!--                        <ImageView-->
<!--                            android:id="@+id/like_img"-->
<!--                            android:layout_width="30dp"-->
<!--                            android:layout_height="30dp"-->
<!--                            android:layout_marginStart="8dp"-->
<!--                            android:src="@drawable/favorite_border"-->
<!--                            app:layout_constraintBottom_toBottomOf="@+id/tempreture"-->
<!--                            app:layout_constraintEnd_toEndOf="@+id/tempreture"-->
<!--                            app:layout_constraintTop_toTopOf="@+id/tempreture" />-->
<!--                        <ImageView-->
<!--                            android:layout_width="30dp"-->
<!--                            android:layout_height="30dp"-->
<!--                            android:src="@drawable/share"-->
<!--                            android:id="@+id/share_img"-->
<!--                            android:onClick="@{() -> detailsFragment.shareMovie()}"-->
<!--                            app:layout_constraintTop_toBottomOf="@id/star_img"-->
<!--                            app:layout_constraintStart_toStartOf="@id/star_img"-->
<!--                            android:layout_marginTop="8dp"/>-->

                        <View
                            android:id="@+id/divider"
                            android:layout_width="270dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="60dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tempreture" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </ScrollView>
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>