            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonShare"
                style="@style/RoundedSquare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="28dp"
                android:clickable="true"
                android:minWidth="0dp"
                android:paddingStart="8dp"
                android:paddingEnd="5dp"
                app:backgroundTint="@color/whitegreen1"
                app:icon="@drawable/baseline_share"
                app:iconGravity="textEnd"
                app:iconPadding="0dp"
                app:iconSize="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/plant_image" />

            <ImageView
                android:id="@+id/like_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/favorite_border"
                app:layout_constraintStart_toEndOf="@+id/alarmButton"
                app:layout_constraintTop_toTopOf="@+id/alarmButton" />

            <Button
